<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controllers.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/my_avatar"
            android:layout_width="match_parent"
            android:layout_height="150pt"
            android:adjustViewBounds="true"/>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/welcomeScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="35pt">

        <Button
            android:id="@+id/takePhotoButton"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginEnd="10pt"
            android:text="Neem foto"/>

        <Button
            android:id="@+id/selectImageButton"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:text="Selecteer afbeelding" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/nextStepContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingTop="180pt">
        <Button
            android:id="@+id/rotateImage"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Draai afbeelding 90Â° ->" />
        <TextView
            android:id="@+id/text_view_id"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="10pt"
            android:paddingTop="10pt"
            android:text="Wie is dit:"/>
        <EditText
            android:id="@+id/employee"
            android:maxLength="25"
            android:layout_width="120pt"
            android:layout_height="wrap_content"
            android:hint="@string/employeeName"
            android:inputType="textPersonName|textCapWords"
            tools:ignore="TextFields" />
        <Button
            android:id="@+id/nextStep"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Volgende stap" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
